<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>Biomes_PlanterBox</defName>
        <label>planter box</label>
        <description>A portable box for growing plants quickly.</description>
        <thingClass>Building_PlantGrower</thingClass>
        <graphicData>
            <texPath>Buildings/PlanterBox</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1,1)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <altitudeLayer>FloorEmplacement</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>60</pathCost>
        <castEdgeShadows>true</castEdgeShadows>
        <fillPercent>0.30</fillPercent>
        <canOverlapZones>false</canOverlapZones>
        <statBases>
            <WorkToBuild>1400</WorkToBuild>
            <MaxHitPoints>180</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Cleanliness>-3</Cleanliness>
        </statBases>
        <size>(1,1)</size>
        <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>25</costStuffCount>
        <fertility>1</fertility>
        <techLevel>Medieval</techLevel>
        <building>
            <defaultPlantToGrow>Plant_Potato</defaultPlantToGrow>
            <sowTag>Ground</sowTag>
        </building>
        <tickerType>Rare</tickerType>
        <comps>
            <li Class="CompProperties_Forbiddable"/>
        </comps>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <designationCategory>Gardening</designationCategory>
    </ThingDef>
</Defs>