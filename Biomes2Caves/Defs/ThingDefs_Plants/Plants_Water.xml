<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef Name="CavePlantWater" ParentName="PlantBase" Abstract="True">
    <plant>
      <neverBlightable>true</neverBlightable>
      <growMinGlow>0</growMinGlow>
      <growOptimalGlow>0</growOptimalGlow>
      <cavePlant>true</cavePlant>
      <wildOrder>1</wildOrder>
      <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
    </plant>
  </ThingDef>

<ThingDef ParentName="CavePlantWater">
        <defName>Biomes_WaterFungus</defName>
        <label>water fungus</label>
        <description>A strange aquatic fungus that has adapted jointed fungal plating to deter smaller predators</description>
        <statBases>
            <MaxHitPoints>85</MaxHitPoints>
	    <Flammability>0.5</Flammability>
	    <Beauty>2</Beauty>
            <Nutrition>0.15</Nutrition>
        </statBases>
        <graphicData>
            <texPath>Plants/Cave/WaterFungus</texPath>
            <graphicClass>Graphic_Single</graphicClass>
		<shadowData>
		<volume>(0.2, 0.3, 0.13)</volume>
		<offset>(-0.03,0,-0.44)</offset>
            </shadowData>
        </graphicData>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <pathCost>35</pathCost>
        <ingestible/>
        <plant>
            <fertilityMin>0.01</fertilityMin>
            <fertilitySensitivity>0.15</fertilitySensitivity>
            <growDays>6.6</growDays>
            <dieIfLeafless>true</dieIfLeafless>
	    <harvestYield>10</harvestYield>
	    <harvestTag>Standard</harvestTag>
	    <neverBlightable>true</neverBlightable>
	    <harvestedThingDef>RawFungus</harvestedThingDef>
	    <harvestMinGrowth>0.65</harvestMinGrowth>
	    <harvestWork>40</harvestWork>
	    <maxMeshCount>4</maxMeshCount>
            <visualSizeRange>
                <min>0.4</min>
                <max>0.6</max>
            </visualSizeRange>
            <topWindExposure>0.05</topWindExposure>
	    <cavePlantWeight>0.005</cavePlantWeight>
	    <purpose>Food</purpose>
        </plant>
	<modExtensions>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Small</plantSize>
				<fertilityConsumptionPerDay>0.002</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.02</moistureConsumptionPerDay>
				<minMoisture>0.5</minMoisture>
				<minOptimalMoisture>0.9</minOptimalMoisture>
				<maxMoisture>1</maxMoisture>
				<minWater>0.01</minWater>
				<maxWater>5.15</maxWater>
				<waterTypeFlags>Normal</waterTypeFlags>
				<minAliveTemperature>-6</minAliveTemperature>
				<minLeafTemperature>0</minLeafTemperature>
				<minGrowthTemperature>1</minGrowthTemperature>
				<minGoodGrowthTemperature>12</minGoodGrowthTemperature>
				<minSunscaldTemperature>48</minSunscaldTemperature>
				<maxTemperature>53</maxTemperature>
				<temperatureSensitivity>0.2</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>0</suboptimalLightGrowthSensitivity>
				<isGreenManure>false</isGreenManure>
				<manureFertilityFactor>0</manureFertilityFactor>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.65</max>
						<stepGraphicPath>Plants/Cave/WaterFungus</stepGraphicPath>
					</li>
					<li>
						<state>Ripe</state>
						<max>1</max>
						<stepGraphicPath>Plants/Cave/WaterFungus</stepGraphicPath>
					</li>
				</growthSteps>
			</li>
		</modExtensions>
    </ThingDef>
