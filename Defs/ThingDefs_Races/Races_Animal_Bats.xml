  </PawnKindDef>


  <!--===============================================-->

  <ThingDef ParentName="BigBirdThingBase">
    <defName>FruitBat</defName>
    <label>fruit bat</label>
    <description>A large sightless flying mammal with darkly-colored fur. While it looks beautiful, its bite is vicious. It's known for being quick to aggression when harmed by violence or confronted by incompetent animal tamers.</description>
    <statBases>
      <MoveSpeed>4.6</MoveSpeed>
      <MarketValue>200</MarketValue>
      <ComfyTemperatureMin>-8</ComfyTemperatureMin>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
    </statBases>
    <race>
      <herdAnimal>false</herdAnimal>
			<baseBodySize>0.8</baseBodySize>
			<baseHealthScale>0.8</baseHealthScale>
			<baseHungerRate>0.40</baseHungerRate>
      <foodType>VegetarianRoughAnimal</foodType>
      <wildness>0.80</wildness>
      <lifeExpectancy>45</lifeExpectancy>
      <meatLabel>bird meat</meatLabel>
      <manhunterOnTameFailChance>0.10</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.10</manhunterOnDamageChance>
    </race>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>Jaw</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="BigBirdKindBase">
    <defName>FruitBat</defName>
    <label>fruit bat</label>
    <labelPlural>fruit bats</labelPlural>
    <race>FruitBat</race>
		<combatPower>60</combatPower>
		<lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Pawns/Animals/FruitBat/FruitBatA</texPath>
          <drawSize>1.1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Pawns/Animals/FruitBat/FruitBat_Dessicated</texPath>
          <drawSize>1.1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Pawns/Animals/FruitBat/FruitBatA</texPath>
          <drawSize>1.4</drawSize>
          <shadowData>
            <volume>(0.3, 0.3, 0.3)</volume>
            <offset>(0,0,-0.3)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Pawns/Animals/FruitBat/FruitBat_Dessicated</texPath>
          <drawSize>1.4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Pawns/Animals/FruitBat/FruitBatA</texPath>
          <drawSize>1.8</drawSize>
          <shadowData>
            <volume>(0.4, 0.4, 0.4)</volume>
            <offset>(0,0,-0.2)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Pawns/Animals/FruitBat/FruitBat_Dessicated</texPath>
          <drawSize>1.8</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

