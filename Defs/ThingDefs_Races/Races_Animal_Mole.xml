            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Pawns/Animals/Mole/Dessicated_Mole</texPath>
          <drawSize>2.05</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

</Defs>